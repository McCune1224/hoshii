// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("WISHLIST_DB")
}

model User {
    id        String     @id @default(uuid())
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    email     String?    @unique
    name      String?    @unique
    password  String
    wishlists Wishlist[]
    Favorite  Favorite[]
}

model Wishlist {
    id         String   @id @default(uuid())
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    name       String
    user       User     @relation(fields: [userId], references: [id])
    userId     String
    items      Item[]
    Category   Category @relation(fields: [categoryId], references: [id])
    categoryId String
}

model Item {
    id          String     @id @default(uuid())
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
    name        String
    description String?
    link        String?
    image       String?
    price       Float?
    Favorite    Favorite[]
    Wishlist    Wishlist?  @relation(fields: [wishlistId], references: [id])
    wishlistId  String?
}

model Favorite {
    id         String   @id @default(uuid())
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    user       User     @relation(fields: [userId], references: [id])
    userId     String
    wishlist   Item     @relation(fields: [wishlistID], references: [id])
    wishlistID String
}

model Category {
    id       String     @id @default(uuid())
    Name     String
    Wishlist Wishlist[]
}
